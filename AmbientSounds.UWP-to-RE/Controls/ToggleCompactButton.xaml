<UserControl
    x:Class="AmbientSounds.Controls.ToggleCompactButton"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:AmbientSounds.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="300"
    d:DesignWidth="400"
    mc:Ignorable="d">

    <Button
        x:Name="CompactButton"
        x:Uid="MoreButtonCompact"
        Click="Button_Click"
        Style="{StaticResource TransparentRoundButtonStyle}"
        ToolTipService.ToolTip="{x:Bind ToolTip}">
        <FontIcon FontFamily="{StaticResource FluentUIGlyphs}" Glyph="&#xEB1E;" />
    </Button>
</UserControl>
